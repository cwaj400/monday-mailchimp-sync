# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}üîí Pre-commit security checks${NC}"

# Check if SKIP_SNYK environment variable is set
if [ "$SKIP_SNYK" = "true" ]; then
  echo "${YELLOW}‚ö†Ô∏è  Skipping Snyk security checks (SKIP_SNYK=true)${NC}"
  echo "${YELLOW}   Remember to run 'npx snyk test' manually later${NC}"
  exit 0
fi

# Check if this is a production deployment commit
if git log --oneline -1 | grep -q "\[skip-security\]\|\[deploy\]\|\[production\]"; then
  echo "${YELLOW}‚ö†Ô∏è  Production deployment detected, skipping security checks${NC}"
  exit 0
fi

echo "${YELLOW}üîç Running Snyk security scan...${NC}"

# Run Snyk security test (simplified without timeout for macOS compatibility)
npx snyk test --severity-threshold=high

# Check if Snyk succeeded
if [ $? -eq 0 ]; then
  echo "${GREEN}‚úÖ Security checks passed!${NC}"
  exit 0
else
  echo "${RED}‚ùå Snyk found security vulnerabilities. Commit aborted.${NC}"
  echo ""
  echo "${YELLOW}üîß To fix issues:${NC}"
  echo "   npm audit fix"
  echo "   npm update"
  echo "   npx snyk wizard"
  echo ""
  echo "${YELLOW}üöÄ To bypass this check:${NC}"
  echo "   SKIP_SNYK=true git commit -m 'your message'"
  echo "   git commit -m 'your message [skip-security]'"
  echo ""
  echo "${YELLOW}üìä For details:${NC}"
  echo "   npx snyk test"
  exit 1
fi 